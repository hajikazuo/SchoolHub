@model SchoolHub.Common.Models.Tennant

@{
    var pageName = "Detalhes da escola";
    ViewData["Title"] = pageName;
}

<div class="container-xl">
    <div class="row row-cards">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">@pageName</h4>
                </div>
                <div class="card-body">
                    <img src="/assets/img/logo/@Model.Logo" alt="Logo" class="avatar avatar-xl mb-3 rounded" onerror="ImgError(this)">
                    <p><strong>@Html.DisplayNameFor(model => model.Status):</strong> @Model.Status</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Nome):</strong> @Model.Nome</p>
                    <p><strong>@Html.DisplayNameFor(model => model.DataCadastro):</strong> @Model.DataCadastro</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Endereco):</strong> @Model.Endereco</p>             
                    <p><strong>@Html.DisplayNameFor(model => model.Email):</strong> <a href="mailto:@Model.Email">@Model.Email</a></p>
                    <p><strong>@Html.DisplayNameFor(model => model.Telefone):</strong> @Model.Telefone</p>
                    <p>
                        <strong>@Html.DisplayNameFor(model => model.Whatsapp):</strong>
                        <a href="https://wa.me/@Model.Whatsapp" target="_blank">@Model.Whatsapp</a>
                    </p>
                </div>
                <div class="card-footer text-end">
                    <div class="d-flex">
                        <a asp-action="Index" class="btn btn-link">Voltar para a lista</a>
                        <a asp-action="Edit" asp-route-id="@Model.TennantId" class="btn btn-primary ms-auto">Editar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

