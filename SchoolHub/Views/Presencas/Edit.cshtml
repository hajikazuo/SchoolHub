@model SchoolHub.Common.Models.Presenca

@{
    var pageName = "Editar presença";
    ViewData["Title"] = pageName;
}

<div class="container-xl">
    <div class="row row-cards">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">@pageName</h4>
                </div>
                <form asp-action="Edit">
                    <input type="hidden" asp-for="PresencaId" />
                    <input type="hidden" asp-for="TurmaId" />
                    <input type="hidden" asp-for="UsuarioId" />
                    <input type="hidden" asp-for="DataAula" />
                    <div class="card-body">
                        <div class="row g-5">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Status" class="form-label"></label>
                                <select asp-for="Status" asp-items="ViewBag.Status" class="form-select">
                                    <option selected value="">--- Selecione ---</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Observacoes" class="form-label"></label>
                                <textarea asp-for="Observacoes" class="form-control"></textarea>
                                <span asp-validation-for="Observacoes" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <div class="d-flex">
                            <a asp-action="Index" class="btn btn-link">Voltar para a lista</a>
                            <button type="submit" class="btn btn-primary ms-auto">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>