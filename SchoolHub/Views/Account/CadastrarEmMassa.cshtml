@{
    var pageName = "Cadastro em lote";
    ViewData["Title"] = pageName;
}

<div class="container-xl">
    <div class="row row-cards">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">@pageName</h4>
                </div>
                <form method="post" enctype="multipart/form-data" asp-action="CadastrarEmMassa">
                    <div class="card-body">
                        <div class="row g-5">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label for="arquivoExcel" class="form-label">Selecione o arquivo Excel</label>
                                <input type="file" class="form-control" id="arquivoExcel" name="arquivoExcel" />
                            </div>

                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <div class="d-flex">
                            <a asp-action="Index" class="btn btn-link">Voltar para a lista</a>
                            <button type="submit" class="btn btn-primary ms-auto">Enviar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

